#${execi 1800 cp -f ${template2}/$(~/.config/conky/conky_weather/parse_weather 'first' '.weather[0].id' '2').png ~/.cache/conky-vision/forecast-2.png}${image ~/.cache/conky-vision/forecast-2.png -p 130,95 -s 32x32}\
